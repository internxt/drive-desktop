{
  "name": "internxt-drive",
  "version": "1.2.0",
  "author": "Internxt <hello@internxt.com>",
  "description": "Internxt Drive client UI",
  "license": "AGPL-3.0",
  "repository": {
    "url": "https://github.com/internxt/drive-desktop"
  },
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=8192' node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "npm run postinstall && node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "postinstall": "cross-env NODE_OPTIONS='--max-old-space-size=8192' npm run lint:fix && electron-rebuild",
    "publish": "cross-env NODE_OPTIONS='--max-old-space-size=8192' node .electron-vue/build.js && electron-builder --publish always"
  },
  "build": {
    "productName": "Internxt Drive",
    "appId": "com.internxt.drive",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*",
      "src/resources/**/*"
    ],
    "publish": {
      "provider": "github"
    },
    "dmg": {
      "background": "resources/osx/background.png",
      "sign": false,
      "title": "Internxt Drive ${version} Installer",
      "artifactName": "${name}-${version}.${ext}",
      "contents": [
        {
          "x": 450,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 150,
          "y": 180,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./resources/osx/Info.plist",
      "entitlementsInherit": "./resources/osx/Info.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "certificateSubjectName": "Internxt Universal Technologies SL",
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "allowElevation": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${name}-${version}_${arch}.${ext}",
      "oneClick": true,
      "perMachine": false
    },
    "linux": {
      "artifactName": "${name}-${version}_${arch}.${ext}",
      "icon": "build/icons",
      "category": "Network",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "deb": {
      "depends": []
    },
    "afterSign": "resources/osx/notarize.js"
  },
  "dependencies": {
    "analytics-node": "^3.4.0-beta.3",
    "async": "^3.1.0",
    "auto-launch": "^5.0.5",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "bip39": "^3.0.2",
    "bootstrap": "^4.3.1",
    "check-disk-space": "^2.1.0",
    "chokidar": "^3.3.1",
    "crypto": "^1.0.1",
    "crypto-js": "^4.0.0",
    "deep-object-diff": "^1.1.0",
    "directory-tree": "^2.2.4",
    "dotenv": "^8.1.0",
    "electron-fetch": "^1.4.0",
    "electron-log": "^4.0.7",
    "electron-store": "^5.0.0",
    "electron-updater": "^4.3.1",
    "fs-extra": "^8.1.0",
    "jquery": "^3.4.1",
    "mkdirp": "^1.0.3",
    "nedb": "^1.8.0",
    "popper.js": "^1.15.0",
    "prettysize": "^2.0.0",
    "readdirp": "^3.4.0",
    "rimraf": "^3.0.0",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.3.2",
    "storj": "internxt/node-lib-exec",
    "temp": "^0.9.0",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-electron": "^1.0.0"
  },
  "devDependencies": {
    "ajv": "^6.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.1.2",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^7.0.2",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^7.2.4",
    "electron-builder": "22.1.0",
    "electron-debug": "^3.1.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-notarize": "^0.2.0",
    "electron-rebuild": "^1.11.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-electron": "^6.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "0.4.0",
    "mocha": "^5.2.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.2",
    "require-dir": "^1.0.0",
    "sass-loader": "^7.0.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.2.4",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3"
  }
}
